# Database
spring.datasource.url=${DB_URL:jdbc:mysql://localhost:3306/your_db_name?useSSL=false&serverTimezone=Asia/Seoul}
spring.datasource.username=${DB_USERNAME}
spring.datasource.password=${DB_PASSWORD}

# JPA
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# JWT
app.jwt.secret=${APP_JWT_SECRET}
app.jwt.access-token-expire-seconds=86400
app.jwt.refresh-token-expire-seconds=604800

# Logging
logging.level.org.springframework.security=DEBUG

# OAuth2 - Naver Login
spring.security.oauth2.client.registration.naver.client-id=${NAVER_CLIENT_ID}
spring.security.oauth2.client.registration.naver.client-secret=${NAVER_CLIENT_SECRET}
spring.security.oauth2.client.registration.naver.client-name=Naver
spring.security.oauth2.client.registration.naver.redirect-uri=${NAVER_REDIRECT_URI:http://localhost:8080/login/oauth2/code/naver}
spring.security.oauth2.client.registration.naver.authorization-grant-type=authorization_code
spring.security.oauth2.client.registration.naver.scope=name,email,profile_image,gender,age
spring.security.oauth2.client.provider.naver.authorization-uri=https://nid.naver.com/oauth2.0/authorize
spring.security.oauth2.client.provider.naver.token-uri=https://nid.naver.com/oauth2.0/token
spring.security.oauth2.client.provider.naver.user-info-uri=https://openapi.naver.com/v1/nid/me
spring.security.oauth2.client.provider.naver.user-name-attribute=response

# Gov24 OpenAPI
app.gov24.base-url=https://api.odcloud.kr/api/gov24/v3
app.gov24.api-key=${GOV24_API_KEY}
app.gov24.timeout-ms=30000

# OpenAI
openai.api.key=${OPENAI_API_KEY}
openai.model=${OPENAI_MODEL:gpt-4.1-mini}

management.endpoints.web.exposure.include=health,info
management.endpoint.health.probes.enabled=true
server.port=8080
